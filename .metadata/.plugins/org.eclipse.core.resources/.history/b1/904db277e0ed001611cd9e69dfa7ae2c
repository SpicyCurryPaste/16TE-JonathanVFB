		public static void classesBoi (int i) {
			
			switch (i){
			case 1: pClass = "Knight";
			health += 2;
			stamina += 3;
			strength += 5;
			intelligence += 1;
			
			break;
			
			case 2: pClass = "Scholar";
			health  += 3;
			stamina += 2;
			strength += 1;
			intelligence += 5;
			
			break;
			
			case 3: pClass = "Monk";
